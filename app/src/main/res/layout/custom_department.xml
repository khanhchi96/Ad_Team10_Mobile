<?xml version="1.0" encoding="utf-8"?>
<!--Author: Phung Khanh Chi, Feng Li Ying-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp">
    <TextView
        android:id="@+id/deptName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="10dip"
        android:fontFamily="sans-serif-light"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/collectionPoint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dip"
        android:paddingTop="6dip"
        android:fontFamily="sans-serif-light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/deptName"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/repName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dip"
        android:paddingTop="6dip"
        android:textSize="18sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/collectionPoint"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/repPhone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dip"
        android:paddingTop="6dip"
        android:fontFamily="sans-serif-light"
        android:textSize="18sp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/repName"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/repEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="6dip"
        android:paddingTop="6dip"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/repPhone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <Button
            android:layout_weight="1"
            android:id="@+id/btnView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:text="View"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Update"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="invisible" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>